{
	"name": "bluespice/categorycheck",
	"type": "mediawiki-extension",
	"description": "Prevents saving page without a category assigned",
	"license": "GPL-3.0-only",
	"extra": {
		"installer-name": "BlueSpiceCategoryCheck"
	},
	"require": {
		"composer/installers": "~1.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "26.0.0",
		"mediawiki/minus-x": "0.3.1",
		"php-parallel-lint/php-console-highlighter": "0.3.2",
		"php-parallel-lint/php-parallel-lint": "1.0.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"phpcs -sp"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
